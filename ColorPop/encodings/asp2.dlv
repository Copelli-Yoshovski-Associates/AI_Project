
#show inMove/3.

col(0..7).
row(0..9).
color(0..4).

% 0 -> EMPTY
% 1 -> RED
% 2 -> GREEN
% 3 -> BLUE
% 4 -> YELLOW

block(7,0,1).
block(7,1,1).
block(7,2,1).
block(7,3,4).
block(7,4,4).
block(7,5,3).
block(7,6,1).
block(7,7,1).
